  	    		<script>
const titles = [...document.querySelectorAll(".post > .post-content > .title")]
titles.map(title => {
  const button = document.createElement("span")
  button.innerText = "ðŸ’¬"
  button.style.cursor = "pointer"
  button.style.margin = "auto 8px"
  button.addEventListener("click", function (e) {
    e.preventDefault()
    const post = e.target.parentNode.parentNode
    const title = post.querySelector("h2.title").childNodes[0].textContent
    const content = post.querySelector("div.body-text").textContent
    const utterance = new SpeechSynthesisUtterance()
    utterance.text = title + ". " + content + "."
    utterance.lang = "es-US"
    speechSynthesis.speak(utterance)
  })
  title.appendChild(button)
})
  	  		</script>

